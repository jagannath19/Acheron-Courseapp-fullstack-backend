package com.acheron.courseapp.model;

import java.time.LocalDate;
import java.time.LocalDateTime;

import org.springframework.http.HttpStatus;

/**
 * @author JagannathSutar
 *	This need when the request has failed, and the action is not completed
 */
public class ApiErrors {
	
	LocalDate datestamp;
	String message;
	HttpStatus status;
	int statusCode;
	String error;
	/**
	 * 
	 */
	public ApiErrors() {
		super();
		// TODO Auto-generated constructor stub
	}
	/**
	 * @param datestamp
	 * @param message
	 * @param status
	 * @param statusCode
	 * @param error
	 */
	public ApiErrors(LocalDate datestamp, String message, HttpStatus status, int statusCode, String error) {
		super();
		this.datestamp = datestamp;
		this.message = message;
		this.status = status;
		this.statusCode = statusCode;
		this.error = error;
	}
	
	
	

}
